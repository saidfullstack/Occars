{% extends 'base.html.twig' %}

{% block title 'Occars' %}

{% block body %}

    <div style="text-align: center">
        <h1 class="h1-accueil">OCCARS</h1>
        <p class="site-description">Vous cherchez une pièce mécanique d'occasion pour votre voiture? Faites votre choix
            parmi notre gamme de produits !</p>
    </div>
    <div class="container">
        <h2 style="text-align: center">Les derniers articles</h2>
        <div class="row flex">
            {% for article in articles %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('article.show', {id: article.id, slug: article.slug}) }}">{{ article.piece }}</a>
                            </h5>
                            <p class="card-text">{{ article.marque }} {{ article.modele }}</p>
                            <div class="text-primary" style="font-weight: bold;font-size: 2em">{{ article.prix }}€
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
