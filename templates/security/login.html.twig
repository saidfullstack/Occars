{% extends 'base.html.twig' %}

{% block body %}
 <h1>Connexion</h1>

 <form action="{{ path('security_login') }}" method="post">
  <div class="form-group">
   <div class="col-md-3"><input placeholder="Adresse email" required name="_username" type="text" class="form-control" ></div>
   <div class="col-md-3"><input placeholder="Mot de passe" required name="_password" type="password" class="form-control" ></div>
  </div>
  <div class="form-group">
   <div class="col-md-3"><button type="submit" class="btn btn-success">Connexion</button></div>
  </div>
 </form>
{% endblock %}
